<h1>桌球拍收納庫</h1>

<%= link_to "<span class='glyphicon glyphicon-plus'></span>新增球拍".html_safe, new_racket_path, class: "btn btn-sm btn-primary"  %>

<table class="table" >
  <thead>
    <tr>
      <td>品牌</td>
      <td>產品名稱</td>
      <td>編碼</td>
      <td>握柄</td>
      <td>結構</td>
      <td>拍重</td>
      <td>拍面大小</td>
      <td>厚度</td>
    </tr>
  </thead>
  <tbody>
    <% @rackets.each do |racket| %>
    <tr>
      <td> <%= link_to "幫我貼皮", "#", class:" btn btn-sm btn-primary " %> </td>
      <td> <%= racket.brand %> </td>
      <td> <%= racket.product %> </td>
      <td> <%= racket.code %> </td>
      <td> <%= racket.grip %> </td>
      <td> <%= racket.material %> </td>
      <td> <%= racket.weight %>克</td>
      <td> <%= racket.size %> </td>
      <td> <%= racket.thickness %> </td>
      <td>
        <%= link_to "<span class='glyphicon glyphicon-pencil'></span>編輯".html_safe,
            edit_racket_path(racket), 
            class: "btn btn-sm btn-warning" %>
        <%= link_to "刪除", racket_path(racket), 
            method:"delete",
            data: { confirm:"確認刪除？" }, 
            remote: true, class: "delete" %>
      </td>
    </tr>
    
    <% end %>
  </tbody>
</table>

<div class="ver">
  <%= link_to "中文版",'#' %>
  <%= link_to "英文版",'#' %>
</div>
<%= paginate @rackets,window: 2, remote: true %>